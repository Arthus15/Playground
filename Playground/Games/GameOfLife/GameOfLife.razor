@page "/gol"
@using Playground.Games.GameOfLife.Service
@inject IGameOfLifeService GameOfLifeService
<h2>Game Of Live</h2>
<br/>
<div style="width: 675px;">
	<MudGrid Spacing="1" Justify="Justify.Center">
		@for (int i = 0; i < 400; i++)
		{
			int localIndex = i;
			<MudItem>
				<MudPaper Style="@SetStyle(localIndex)" Height="25px" Width="25px">
					<MudIconButton DisableRipple="true" OnClick="(()=>UpdateCell(localIndex))" Size="Size.Large" />
				</MudPaper>
			</MudItem>
		}
	</MudGrid>
	<br />
</div>

<div style="display: flex; align-items: center">
	<MudButton OnClick="@(async ()=>await StartGameAsync().ConfigureAwait(true))" Variant="Variant.Outlined" Color="Color.Success">Start</MudButton>
	<MudButton Style="margin-left: 5px" OnClick="(Stop)" Variant="Variant.Outlined" Color="Color.Error">Stop</MudButton>
</div>
